<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>网上书店管理系统</display-name>

    <!-- 默认首页 -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- 字符编码过滤器（暂时注释以绕过类加载问题）
    <filter>
        <filter-name>CharacterEncodingFilter</filter-name>
        <filter-class>servlet.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    -->

    <!-- Servlet URL映射 -->
    <servlet>
        <servlet-name>BookServlet</servlet-name>
        <servlet-class>servlet.BookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookServlet</servlet-name>
        <url-pattern>/book</url-pattern>
        <url-pattern>/book/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>OrderServlet</servlet-name>
        <servlet-class>servlet.OrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrderServlet</servlet-name>
        <url-pattern>/order</url-pattern>
        <url-pattern>/order/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PurchaseServlet</servlet-name>
        <servlet-class>servlet.PurchaseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PurchaseServlet</servlet-name>
        <url-pattern>/purchase</url-pattern>
        <url-pattern>/purchase/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CustomerServlet</servlet-name>
        <servlet-class>servlet.CustomerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomerServlet</servlet-name>
        <url-pattern>/customer</url-pattern>
        <url-pattern>/customer/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ShipmentServlet</servlet-name>
        <servlet-class>servlet.ShipmentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShipmentServlet</servlet-name>
        <url-pattern>/shipment</url-pattern>
        <url-pattern>/shipment/*</url-pattern>
    </servlet-mapping>

    <!-- 预留：报表与管理后台 -->
    <!-- ReportServlet: /report/* -->
    <!-- AdminServlet: /admin/* -->

    <!-- 错误页面配置 -->
    <error-page>
        <error-code>404</error-code>
        <location>/jsp/error/404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/jsp/error/500.jsp</location>
    </error-page>

    <!-- JSP配置 -->
    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
            <scripting-invalid>false</scripting-invalid>
        </jsp-property-group>
    </jsp-config>

    <!-- 统计报表视图演示 -->
    <servlet>
        <servlet-name>ReportServlet</servlet-name>
        <servlet-class>servlet.ReportServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReportServlet</servlet-name>
        <url-pattern>/report/*</url-pattern>
    </servlet-mapping>

    <!-- 管理员端：客户账户与信用等级管理 -->
    <servlet>
        <servlet-name>AdminCustomerServlet</servlet-name>
        <servlet-class>servlet.AdminCustomerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminCustomerServlet</servlet-name>
        <url-pattern>/admin/customer/*</url-pattern>
    </servlet-mapping>

    <!-- 管理员端：库存管理与缺书登记 -->
    <servlet>
        <servlet-name>InventoryServlet</servlet-name>
        <servlet-class>servlet.InventoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InventoryServlet</servlet-name>
        <url-pattern>/admin/inventory/*</url-pattern>
    </servlet-mapping>

</web-app>



